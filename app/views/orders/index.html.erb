    <br>
    <button class="btn btn-xs sm:btn-sm md:btn-md lg:btn-lg xl:btn-xl">Accepter</button>
    <button class="btn btn-xs sm:btn-sm md:btn-md lg:btn-lg xl:btn-xl">Refuser</button>
</li>
    <%end%>
  </ul>
    </div>
