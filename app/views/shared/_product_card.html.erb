
<div>
  <div class="card bg-[#fff7ed] hover:bg-[#ffd6a7] card-border border-[#ffead0] hover:border-[#7c2808] card-sm text-[#7c2808] p-3">
    <figure class="p-2">
      <div class="relative inline-block">
        <%= image_tag("shoes_4.jpg", class:"rounded-[calc(var(--radius-box)-.3rem)]") %>
        <span class="absolute top-2 right-2 badge badge-success px-2 py-1">
        PROMO
      </span>
      </div>
      </figure>
      <div class="card-body gap-4">
        <h2 class="text-2xl font-semibold"><%= product.name %></h2>
        <p class="font-semibold"><%= product.price %></p>
        <p><%= product.description %></p>
          <%= link_to store_product_path(product) do %>
            <p class="btn btn-sm btn-[#370a00] text-[#370a00] ">Voir plus</p>
          <% end %>
      </div>
    </div>
</div>





<div class="card rounded-[10px] p-[15px] mt-[30px] bg-orange-100  text-l">

    <!-- Ligne principale -->
    <div class="flex flex-col lg:flex-row gap-6">

      <!-- Image + Infos en colonne -->
    <div class="w-full lg:w-1/2 flex flex-col items-start gap-4">
        <!-- Image -->
        <div>
          <%# <%= image_tag("shoes_1.jpg", size: "100x50", alt: "Edit Entry")%>
          <%# <%=image_tag("shoes_1.jpg", height: '100', width: '32')%>
          <%= image_tag("shoes_1.jpg",style: "max-width: 250px;", alt: "Edit Entry", class: "rounded-[10px] shadow-md") %>
          <%# <img src="images/shoes_1.jpg" alt="Image produit" class="rounded-md w-full max-w-xs"> %>
        </div>

        <!-- Infos en 2 colonnes -->
        <div class="grid grid-cols-2 gap-4 w-full text-center">
          <div class="bg-white p-3 rounded-md shadow">
            <h3 class="font-bold">Price</h3>
            <p><%= product.price %></p>
          </div>
          <div class="bg-white p-3 rounded-md shadow">
            <h3 class="font-bold">Category</h3>
            <p><%= product.category %></p>
          </div>
          <div class="bg-white p-3 rounded-md shadow">
            <h3 class="font-bold">Stock</h3>
            <p><%= product.stock %></p>
          </div>
          <div class="bg-white p-3 rounded-md shadow">
            <h3 class="font-bold">Discount</h3>
            <p><%= product.discount %> %</p>
          </div>
        </div>
      </div>

      <!-- Description à droite -->
      <div class="w-full lg:w-1/2 space-y-4">
        <h3 class="text-lg font-semibold">Description</h3>
        <textarea placeholder="Écrire une description..." class="w-full h-60 p-3 rounded-md bg-slate-100"></textarea>
      </div>

    </div>
  </div>
