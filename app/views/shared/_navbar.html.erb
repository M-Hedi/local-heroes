<div class="relative z-10">
  <nav class="navbar text-neutral-content bg-base-100 fixed top-0 right-0 left-0">
    <div class="w-full mx-5 flex items-center justify-between">
      <%= link_to root_path do %>
        <%= image_tag "Logo_local_heroes.webp", class: "h-20" %>
      <% end %>


      <!-- Menu -->
      <div id="navbar-menu" class="hidden md:flex md:items-center w-full md:w-auto mt-2 md:mt-0">
        <div class="flex flex-row items-center content-center w-full font-bold text-xl">
         <% if user_signed_in? && current_user.orders.exists? %>
         <%= link_to index_baskets_path do %>
         <div class="flex flex-col items-end">
           <i class="fa-solid fa-cart-shopping text-3xl text-neutral mr-2 py-auto"></i>

         </div>          <div class="text-neutral text-lg mr-2 py-auto"><%=current_user.orders.where(status_customer: "validated").count %></div>
           <% end %>
         <% end %>
          <% if user_signed_in? %>
            <div class="w-20 relative">
              <%= image_tag "Simon.png", alt: "simon", class:"rounded-full cursor-pointer", onclick: "document.getElementById('logout-menu').classList.toggle('hidden')" %>
              <div id="logout-menu" class="absolute right-1 w-32 bg-orange-200 rounded-2xl shadow-lg hidden z-40 flex justify-center flex-col ">
                <%# < class= "text-sm px-2 py-2 text-orange-900 hover:text-orange-400 text-center"> <%= @user.first_name if @user %>
                <% if current_user.store %>
                  <%= link_to "Ma boutique", store_path(current_user.store), class: "text-sm px-2 py-2 text-orange-900 hover:text-orange-400 text-center" %>
                  <%= link_to "Ma Vitrine ", dashboard_path, class: "text-sm px-2 py-2 text-orange-900 hover:text-orange-400 text-center" %>
                <% end %>
                <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-sm px-2 py-2 text-orange-900 hover:text-orange-400 text-center" %>
              </div>
            </div>
          <% else %>
            <li>
              <%= link_to "Login", new_user_session_path, class: "block px-4 py-2 text-gray-700 hover:text-blue-600" %>
            </li>
          <% end %>
        </div>
      </div>
    </div>
  </nav>
</div>
<div class="h-[100px] z-9"></div>
