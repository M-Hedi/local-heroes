<div class="relative">
  <nav class="navbar text-neutral-content bg-base-100 fixed top-0 right-0 left-0">
    <div class="container mx-auto flex items-center justify-between">
      <%= link_to root_path do %>
        <%= image_tag "Logo_local_heroes.webp", class: "h-20" %>
      <% end %>

      <!-- Mobile menu button -->
      <button class="md:hidden text-gray-500 focus:outline-none" onclick="document.getElementById('navbar-menu').classList.toggle('hidden')">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Menu -->
      <div id="navbar-menu" class="hidden md:flex md:items-center w-full md:w-auto mt-2 md:mt-0">
        <ul class="flex flex-col md:flex-row md:space-x-4 w-full font-bold text-xl md:w-auto">
          <% if user_signed_in? %>
            <li>
              <%= link_to "Search", searches_path, class: "block px-4 py-2 text-gray-700 hover:text-green-600" %>
            </li>
            <li>
              <%= link_to "Orders", orders_path, class: "block px-4 py-2 text-gray-700 hover:text-green-600" %>
            </li>
            <li>
            <%= link_to "My dashboard", dashboard_path, class: "block px-4 py-2 text-gray-700 hover:text-green-600" %>
            </li>
            <li class="relative group">
              <a href="#" class="flex items-center space-x-2 px-4 py-2">
                <i class="fa-solid fa-circle-user text-gray-700 h-7 w-7" alt="dropdown menu"></i>
              </a>
              <div class="absolute right-0 mt-2 w-48 bg-white border rounded shadow-lg hidden group-hover:block z-10">
                <%= link_to "Dashboard", "#", class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" %>
                <%= link_to "Settings", "#", class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" %>
                <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "block px-4 py-2 text-gray-700 hover:bg-gray-100" %>
              </div>
            </li>
          <% else %>
            <li>
              <%= link_to "Login", new_user_session_path, class: "block px-4 py-2 text-gray-700 hover:text-blue-600" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>
<div class="100px z-10"></div>
