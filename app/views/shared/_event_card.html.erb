<div class="card card-side bg-[#FFFCF9] shadow-sm h-[200px] border-1 border-[#FFD9AC]">
  <figure class="p-2">
    <%= image_tag("photo-test.jpg", class:"p-[8px] rounded-3xl w-70 ") %>
  </figure>
  <div class="card-body">
    <h2 class="card-title"><%= link_to event.title, event_path(event), event: event, class: "hover:text-green-800 ease-in-out duration-300" %></h2>
    <h3 class="font-semibold">Magasins Participants:</h3>
    <p class="bg-[#FFD9AC] w-35 h-20 rounded-xl flex justify-center"><%= event.start_date.strftime("%d") %> - <%= event.end_date.strftime("%d - %m-%Y") %></p>
    <p><%= event.description %></p>
    <ul class="columns-3 gap-4">
      <li><%= link_to event.store.name, store_path(event.store), class: "hover:text-green-800 ease-in-out duration-300" %></li>
      <% event.event_partners.each do |partner| %>
        <li><%= link_to partner.store.name, store_path(partner.store), class: "hover:text-green-800 ease-in-out duration-300" %></li>
      <% end %>
    </ul>
  </div>
</div>
<%#
  create_table "events", force: :cascade do |t|
    t.text "description"
    t.string "title"
    t.date "start_date"
    t.date "end_date"
    t.bigint "store_id", null: false
    t.datetime "created_at", null: false
    t.datetime "updated_at", null: false
    t.index ["store_id"], name: "index_events_on_store_id"
  end %>
