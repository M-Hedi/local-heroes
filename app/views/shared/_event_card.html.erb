
<div class="flex border border-[#FFD9AC] bg-white w-xl rounded-3xl">
  <figure class="grow p-[16px]">
  <% if event.photo.attached? %>
    <%= image_tag event.photo, class: " rounded-3xl w-[300px] h-[200px]", alt: event.title %>
    <% else %>
    <%= image_tag("photo-test.jpg", class:" rounded-3xl w-[300px] h-[200px]") %>
    <% end %>
  </figure>
  <div class="truncate overflow-hidden pr-6 w-[30rem] py-2">
    <h2 class="card-title text-wrap text-2xl font-bold py-2"><%= link_to event.title, event_path(event), event: event %></h2>
    <p class="bg-[#FFD9AC] w-30 rounded-xl flex justify-center"><%= event.start_date.strftime("%d/%m") %> - <%= event.end_date.strftime("%d/%m") %></p>


<div class="flex flex-col shadow-sm border-2 border-[#FFD9AC] bg-base-100 w-md rounded-xl hover:bg-base-200">
  <%= image_tag("photo-test.jpg", class:" rounded-xl w-[100%] h-[80%] p-1") %>
  <%= link_to event_path(event) do %>
  <div class="truncate overflow-hidden w-[100%] h-[100%]">
    <h2 class="text-wrap text-3xl px-3 py-3 text-center font-bold"><%= link_to event.title, event_path(event), event: event %></h2>
    <p class="bg-[#FFD9AC] w-[100%] text-xl px-3 flex justify-center"><%= event.start_date.strftime("%d/%m") %> - <%= event.end_date.strftime("%d/%m") %></p>
    <p class="truncate px-3 text-lg py-3"><%= event.description %></p>
    <p class="flex justify-end font-bold py-3 px-2">Voir plus...</p>
    <div class="bg-base-200 w-[100%] hover:bg-base-200 border-t-1 border-base-300">
      <h3 class="font-semibold text-xl px-3 py-3">Magasin(s) Participant(s):</h3>
      <ul class="flex flex-wrap justify-between">
        <li class=" py-3 px-3 flex justify-center rounded-xl"><%= event.event_partners.count %> Magasin(s) Partenaire(s)</li>
        <i class="fa-solid fa-user px-3"> <%= event.event_participants.count %></i> <%# Jonas tu peux mettre code ici %>
      </ul>
    </div>
  </div>
<% end %>
</div>   
