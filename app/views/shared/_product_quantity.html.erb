<div class="flex items-center justify-center gap-2 mt-4">
  <button
    type="button"
    class="btn btn-sm btn-circle bg-[#FFBA69] text-[#7C2807] hover:bg-orange-400"
    data-action="click->cart#decreaseQuantity"
    aria-label="Diminuer la quantité">
    -
  </button>
  <span class="text-lg font-semibold w-8 text-center" data-order-id=<%= @order.id %>
    data-quantity="<%= Item.find_by(order: @order, product: product).quantity %>"
    id="quantity-<%= @order.id %>">
    1
  </span>
  <button
    type="button"
    class="btn btn-sm btn-circle bg-[#FFBA69] text-[#7C2807] hover:bg-orange-400"
    data-action="click->cart#increaseQuantity"
    aria-label="Augmenter la quantité">
    +
  </button>
</div>
