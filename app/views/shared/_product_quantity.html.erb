<div class="flex items-center justify-between w-full">
  <button
    type="button"
    class="btn btn-md btn-circle bg-[#FFBA69] text-[#7C2807] hover:bg-orange-400"
    data-action="click->cart#decreaseQuantity"
    data-item-id="<%= item.id %>"
    data-item-quantity="<%= item.quantity %>"
    data-order-id="<%= item.order.id %>"
    data-product-id="<%= item.product.id %>">
    -
  </button>
  <span class="text-xl font-semibold flex-1 text-center">
    <%= item.quantity %>
  </span>
  <button
    type="button"
    class="btn btn-md btn-circle bg-[#FFBA69] text-[#7C2807] hover:bg-orange-400"
    data-action="click->cart#increaseQuantity"
    data-item-id="<%= item.id %>"
    data-item-quantity="<%= item.quantity%>"
    data-order-id="<%= item.order.id %>"
    data-product-id="<%= item.product.id%>">
    +
  </button>
</div>
