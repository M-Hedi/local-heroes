<div class="min-h-screen flex flex-col justify-center items-center bg-orange-200 p-4">
  <h2 class="text-3xl font-bold mb-6 text-center">Sign Up - Local Heroes</h2>

  <div>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "card w-full max-w-sm shadow-2xl bg-base-100 p-6" }) do |f| %>

      <%= f.error_notification %>

      <div class="form-control mb-4">
        <%= f.input :email,
                    label: "Email",
                    required: true,
                    autofocus: true,
                    input_html: { class: "input input-bordered w-full", autocomplete: "email" },
                    label_html: { class: "label-text mb-1" },
                    wrapper_html: { class: "mb-2" } %>
      </div>

      <div class="form-control mb-4">
        <%= f.input :password,
                    label: "Mot de passe",
                    required: true,
                    hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                    input_html: { class: "input input-bordered w-full", autocomplete: "new-password" },
                    label_html: { class: "label-text mb-1" },
                    wrapper_html: { class: "mb-2" } %>
      </div>

      <div class="form-control mb-4">
        <%= f.input :password_confirmation,
                    label: "Confirmation",
                    required: true,
                    input_html: { class: "input input-bordered w-full", autocomplete: "new-password" },
                    label_html: { class: "label-text mb-1" },
                    wrapper_html: { class: "mb-2" } %>
      </div>

      <div class="form-control mt-6">
        <%= f.button :submit, "S'inscrire", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <div class="text-center mt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
